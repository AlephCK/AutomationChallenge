{
  "plugins": [
    "cypress"
  ],
  "extends": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "comma-spacing":
    [
      "error",
      {
        "after": true
      }
    ],
    "camelcase":
    [
      "error",
      {
        "properties": "always"
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "strict": [
      "error",
      "global"
    ],
    "no-lonely-if": [
      "error"
    ],
    "curly": [
      "error"
    ],
    "no-var": [
      "error"
    ],
    "no-const-assign": [
      "error"
    ],
    "no-duplicate-imports": [
      "error"
    ],
    "no-trailing-spaces": [
      "error",
      {
        "ignoreComments": true
      }
    ],
    "prefer-const": [
      "warn",
      {
        "destructuring": "all"
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": [
          "/"
        ]
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "consistent-return": "warn",
    "lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }
  ],
    "max-len": [
      "error",
      {
        "code": 150,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true,
        "ignoreRegExpLiterals": true
      }
    ]
  }
}
