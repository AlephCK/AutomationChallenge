{
  "name": "automation-challenge",
  "version": "1.0.0",
  "description": "This project is part of the Senior Automation challenge to automate some test cases of OrangeHRM.",
  "main": "index.js",
  "scripts": {
    "pretest": "rm -rf cypress/reports && mkdir cypress/reports",
    "cy:open": "npx cypress open",
    "cy:electron": "npm run pretest && npx cypress run --spec 'cypress/e2e/specs/*'",
    "cy:chrome": "npm run pretest && npx cypress run --browser chrome",
    "lint-check": "npx eslint ./cypress/",
    "lint-fix": "npx eslint --fix ./cypress/"
  },
  "author": "Winston Cruz",
  "license": "ISC",
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@faker-js/faker": "^7.6.0",
    "cross-env": "^7.0.3",
    "cypress": "^11.0.1",
    "cypress-mochawesome-reporter": "^3.2.3",
    "cypress-real-events": "^1.7.4",
    "cypress-wait-until": "^1.7.2",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-webpack-plugin": "^3.2.0",
    "mocha": "^10.1.0",
    "playwright-webkit": "^1.27.1"
  }
}
